@using WebUI.Models.ProjectForecast
@model List<WB_ForecastingManagementResponseVM>
@{
	ViewData["Title"] = "Time Log Report By Project";
	ViewData["PageName"] = "TLReportsByProject";
	ViewData["Category1"] = "Reports";
}


<div class="panel">
	<div class="panel-hdr">
		<h2>
			Time Log Report By Project
		</h2>
	</div>
	<div class="panel-container show">
		<div class="panel-content border-faded border-left-0 border-right-0 border-top-0">
			<form class="mb-5 needs-validation" id="upsertforcastformFilter" novalidate>
				<div class="row">
					<div class="col-lg-3">
						<div class="form-group">
                            <label class="form-label" for="SelectListforProjectD">Select Project</label>
                            <select class="form-control SelectListforProjectLookup" name="ProjectId" id="SelectListforProjectD">
                            </select>
                        </div>
					</div>
					<div class="col-lg-3">
						<div class="form-group">
							<label class="form-label" for="SelectListforMonthTL">Select Month</label>
							<select class="form-control" name="BillingMonth" id="SelectListforMonthTL">
								<option value="0" selected="selected">Select Month</option>
								<option value="1">January</option>
								<option value="2">February</option>
								<option value="3">March</option>
								<option value="4">April</option>
								<option value="5">May</option>
								<option value="6">June</option>
								<option value="7">July</option>
								<option value="8">August</option>
								<option value="9">September</option>
								<option value="10">October</option>
								<option value="11">November</option>
								<option value="12">December</option>
							</select>
						</div>
					</div>
					<div class="col-lg-3">
						<div class="form-group">
							<label class="form-label" for="SelectListforYearTL">Select Year</label>
							<select class="form-control" name="BillingYear" id="SelectListforYearTL">
								<option value="0" selected="selected">Select Year</option>
								<option value="2022">2022</option>
								<option value="2021">2021</option>
								<option value="2020">2020</option>
							</select>
						</div>
					</div>
					<div class="col-lg-3">
						<div class="form-group mt-4">
							<button type="button" id="SearchBTnForProjectTL" class="btn btn-primary"><i class="fal fa-search mr-1"></i> Apply Filter</button>
							<button type="button" onclick="LoadListing()" class="btn btn-danger"><i class="fal fa-undo mr-1"></i> Reset</button>
						</div>
					</div>
				</div>
			</form>
			<table id="TLReportListByUser" class="table table-sm w-100 table-striped table-hover table-bordered">
				<thead>
					<tr class="bg-primary-300">
						<th>Project Name</th>
						<th>Resource Name</th>
						<th>Billing Month</th>
						<th>Est. Billable Hr(s)</th>
						<th>Est. Non Billable Hr(s)</th>
						<th>Logged Non Billable Hr(s)</th>
						<th>Logged Billable Hr(s)</th>
						<th>Total Logged Hr(s)</th>
					</tr>
				</thead>
				 <tbody id="TLReportsByProjectSection">
                </tbody>
			</table>
		</div>
	</div>
</div>

@section ScriptsBlock{
	<script src="~/js/customscripts/reports/TLReportsByProject.js"></script>
}