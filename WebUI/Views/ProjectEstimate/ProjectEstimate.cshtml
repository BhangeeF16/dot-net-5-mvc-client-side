@{
    ViewData["Title"] = "Project Estimate";
    ViewData["PageName"] = "ProjectEstimate";
    ViewData["Category1"] = "ProjectEstimate";
}

<div class="panel">
    <div class="panel-hdr">
        <h2>
            Project Estimate
        </h2>
        <div class="panel-toolbar">
            <button class="btn btn-primary ml-3 btn-sm" data-toggle="modal" data-target="#addProjectForEstimateModal">
                <i class="fal fa-plus mr-1"></i> New Estimate
            </button>
        </div>
    </div>
    <div class="panel-container show">
        <div class="panel-content border-faded border-left-0 border-right-0 border-top-0">
            <table id="inventoryList" class="table table-sm w-100 table-striped table-hover table-bordered">
                <thead class="bg-primary-300">
                    <tr>
                        <th data-priority="1">Project Name</th>
                        <th>Created Date</th>
                        <th>Created By</th>
                        <th>Notes</th>
                        <th data-priority="2">Actions</th>
                    </tr>
                </thead>
                <tbody>
                    <tr>
                        <td>Prject ABC</td>
                        <td>10/06/2020</td>
                        <td>John Doe</td>
                        <td>
                            Test Notes for Project
                        </td>
                        <td align="center" width="10%">
                            <span data-target="#addEditProjectEstimateModal" data-toggle="modal">
                                <button class="btn btn-outline-info btn-xs btn-icon mr-2" data-toggle="tooltip" title="Manage Project Estimate">
                                    <i class="fa fa-cog"></i>
                                </button>
                            </span>
                            <button class="btn btn-outline-danger btn-xs btn-icon mr-2" data-toggle="tooltip" title="Remove Project">
                                <i class="fa fa-trash-alt"></i>
                            </button>
                        </td>
                    </tr>
                </tbody>
            </table>
        </div>
    </div>
</div>

<partial name="/Views/Modal/_AddProjectForEstimate.cshtml" />
<partial name="/Views/Modal/_AddEditProjectEstimateModal.cshtml" />
<partial name="/Views/Modal/_AddEditUseCase.cshtml" />
<partial name="/Views/Modal/_AddMilestoneModal.cshtml" />


@section ScriptsBlock{

<script>
    $('#inventoryList').DataTable({
        responsive: true,
        columnDefs: [
            { responsivePriority: 1, targets: 0 },
            { responsivePriority: 2, targets: -1 }
        ]
    });
</script>
}