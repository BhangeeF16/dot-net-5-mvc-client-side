<div class="modal fade" id="leavesRequestModal" tabindex="-1" role="dialog" aria-hidden="true" data-backdrop="static">
    <div class="modal-dialog modal-dialog-centered modal-lg">
        <div class="modal-content">
            <div class="modal-header border py-3">
                <h4 class="modal-title">
                    Leaves Request Form
                </h4>
                <button type="button" class="close" data-dismiss="modal" aria-label="Close">
                    <span aria-hidden="true"><i class="fal fa-times"></i></span>
                </button>
            </div>
            <div class="modal-body">
                <form id="leaveRequestForm" novalidate>
                    <div class="row">
                        <div class="col-md-12 col-lg-6 col-xl-4">
                            <div class="form-group">
                                <label class="form-label" for="LeaveType">Leave Type <span class="text-danger">*</span></label>
                                <select class="custom-select" name="LeaveType" id="LeaveType" type="select" required>
                                    <option value="">-- Please Select --</option>
                                    <option value="1">Casual</option>
                                    <option value="2">Anual</option>
                                    <option value="3">Sick</option>
                                    <option value="4">Maternity</option>
                                    <option value="5">Paternity</option>
                                    <option value="6">Emergency</option>
                                    <option value="7">Half Day</option>
                                </select>
                                <div class="invalid-feedback">
                                    Please select the leave type.
                                </div>
                            </div>
                        </div>
                        <div class="col-md-12 col-lg-6 col-xl-4">
                            <div class="form-group">
                                <label class="form-label" for="ReportingManager">Reporting Manager <span class="text-danger">*</span></label>
                                <input class="form-control" name="ReportingManager" id="ReportingManager" type="text" required />
                                <div class="invalid-feedback">
                                    Please enter reporting manager name.
                                </div>
                            </div>
                        </div>
                    </div>
                    <div class="row mt-3">
                        <div class="col-lg-4">
                            <div class="form-group">
                                <label class="form-label" for="NoOfDays">No. of Days <span class="text-danger">*</span></label>
                                <input class="form-control" name="NoOfDays" id="NoOfDays" type="number" required />
                                <div class="invalid-feedback">
                                    Please select no of days.
                                </div>
                            </div>
                        </div>
                        <div class="col-lg-4">
                            <div class="form-group">
                                <label class="form-label" for="DateFrom">Date From <span class="text-danger">*</span></label>
                                <input class="form-control" name="DateFrom" id="DateFrom" type="date" required />
                                <div class="invalid-feedback">
                                    Please select date from.
                                </div>
                            </div>
                        </div>
                        <div class="col-lg-4">
                            <div class="form-group">
                                <label class="form-label" for="DateTo">Date To <span class="text-danger">*</span></label>
                                <input class="form-control" name="DateTo" id="DateTo" type="date" required />
                                <div class="invalid-feedback">
                                    Please select date to.
                                </div>
                            </div>
                        </div>
                    </div>
                    <div class="row">
                        <div class="col-lg-12">
                            <div class="form-group">
                                <label class="form-label" for="LeavesReason">Leaves Reason</label>
                                <textarea class="form-control" rows="3"></textarea>
                            </div>
                        </div>
                    </div>
                    @*<button type="submit" class="btn btn-primary"><i class="fal fa-save mr-1"></i> Add</button>*@
                </form>
            </div>
            <div class="modal-footer border py-2">
                <button type="button" class="btn btn-primary" id="submitLeaveFormBtn"><i class="fal fa-save mr-1"></i> Add</button>
                <button type="button" class="btn btn-secondary" data-dismiss="modal"><i class="fal fa-times-circle mr-1 text-white"></i> Close</button>
            </div>
        </div>
    </div>
</div>

