@{ ViewData["Title"] = "Forecast By Resource";
    ViewData["PageName"] = "ManageForecastByResource";
    ViewData["Category1"] = "Dashboard";
    //ViewData["Heading"] = "<i class='subheader-icon fal fa-chart-area'></i> Analytics <span class='fw-300'>Dashboard</span>"; }
}
<input type="hidden" id="LoggedInUserID" value="@User.Claims.Where(c=>c.Type == ClaimTypes.NameIdentifier).FirstOrDefault().Value" />
<div class="panel">
    <div class="panel-hdr">
        <h2>
            Manage Forecast By Resource
        </h2>
        <div class="panel-toolbar">
            <div class="form-group mb-0" title="Default Month" data-toggle="tooltip">
                <select class="form-control border-dark form-control-sm" onchange="BindMonthProjectResourceForecastRecord()" id="DefaultMonthLookup">
                    <option value="1">January</option>
                    <option value="2">February</option>
                    <option value="3">March</option>
                    <option value="4">April</option>
                    <option value="5">May</option>
                    <option value="6">June</option>
                    <option value="7">July</option>
                    <option value="8">August</option>
                    <option value="9">September</option>
                    <option value="10">October</option>
                    <option value="11">November</option>
                    <option value="12">December</option>
                </select>
            </div>
            <button class="btn btn-primary ml-3 btn-sm" data-toggle="modal" data-target="#addResourceForcastModal"><i class="fal fa-plus mr-1"></i> Add/Edit Forecast</button>
        </div>
    </div>
    <div class="panel-container show">
        <div class="panel-content border-faded border-left-0 border-right-0 border-top-0">
            <form class="mb-5 needs-validation" id="upsertforcastformFilter" novalidate>
                <div class="row">
                    <div class="col-lg-3">
                        <div class="form-group">
                            <label class="form-label" for="SelectListforResource">Select Resource</label>
                            <select class="form-control SelectListforResourceLookup" name="resourceUsername" id="SelectListforResource">
                            </select>
                        </div>
                    </div>
                    <div class="col-lg-3">
                        <div class="form-group">
                            <label class="form-label" for="SelectListforMonthD">Select Month</label>
                            <select class="form-control" name="BillingMonth" id="SelectListforMonthD">
                                <option value="0"  selected="selected">Select Month</option>
                                <option value="1">January</option>
                                <option value="2">February</option>
                                <option value="3">March</option>
                                <option value="4">April</option>
                                <option value="5">May</option>
                                <option value="6">June</option>
                                <option value="7">July</option>
                                <option value="8">August</option>
                                <option value="9">September</option>
                                <option value="10">October</option>
                                <option value="11">November</option>
                                <option value="12">December</option>
                            </select>
                        </div>
                    </div>
                    <div class="col-lg-3">
                        <div class="form-group">
                            <label class="form-label" for="SelectListforYearResource">Select Year</label>
                            <select class="form-control" name="BillingYear" id="SelectListforYearResource">
                                <option value="0"  selected="selected">Select Year</option>
                                <option value="2022">2022</option>
                                <option value="2021">2021</option>
                                <option value="2020">2020</option>
                            </select>
                        </div>
                    </div>
                    <div class="col-lg-3">
                        <div class="form-group mt-4">
                            <button type="button" id="upsertResourceforcastformFilterbtn" class="btn btn-primary"><i class="fal fa-search mr-1"></i> Apply Filter</button>
                            <button type="button" onclick="Reset()" class="btn btn-danger"><i class="fal fa-undo mr-1"></i> Reset</button>
                        </div>
                    </div>
                </div>
            </form>
            <table id="forcastList" class="table table-sm w-100 table-striped table-hover table-bordered">
                <thead class="bg-primary-300">
                    <tr>
                        <th>Resource Name</th>
                        <th>Billing Month</th>
                        <th>Est. Billable Hr(s)</th>
                        <th>Logged Billable Hr(s)</th>
                        <th>Est. Non Billable Hr(s)</th>
                        <th>Logged Non Billable Hr(s)</th>
                        <th>Total Est. Hr(s)</th>
                        <th>Total Logged Hr(s)</th>
                        <th>Actions</th>
                    </tr>
                </thead>
                <tbody id="ProjectForcastResourceTemplateTypeSection">
                </tbody>
            </table>
        </div>
    </div>
</div>
<partial name="/Views/Modal/_AddEditResourceForcastModal.cshtml" />
<partial name="/Views/Modal/_ResourceForecastDetailModal.cshtml" />


@section ScriptsBlock {
    <script src="~/js/customscripts/projectforecastresource/ManageForecastResource.js"></script>
}
